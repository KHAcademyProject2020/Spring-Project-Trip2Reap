<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis/org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper>
  <cache-ref namespace="reviewMapper"/>
  	<select id="getListCount" resultType="_int">
		select count(*)
    	from board
  		where BO_DELETE_YN='N'
  	</select>
  	
  	<select id="selectList" resultMap="boardResultSet">
  		 select * 
  		 from board 
   		 where BO_DELETE_YN='N'
   		 order by BO_NO desc
  	</select>
  	
  	<resultMap type="Board" id="boardResultSet">
      <id column="BO_NO" property="boNo"/>
      <result column="CA_CODE" property="caCode"/>
      <result column="BO_TITLE" property="boTitle"/>
      <result column="BO_CONTENT" property="boContent"/>
      <result column="MEMBER_ID" property="boCount"/>
      <result column="BO_COUNT" property="boCount"/>
      <result column="BO_TAG" property="boTag"/>
      <result column="BO_DELETE_YN" property="boDeleteYN"/>
   </resultMap>
   
   <insert id="insertReview">
   		 insert into board
        values(seq_boNo.nextval, #{boTitle}, #{memberId}, #{boContent})
   </insert>
   
   <update id="addReadCount">
   
   </update>
   
   <select id="selectReview" resultMap="boardResultSet">
   
   </select> 
   
   <update id="updateBoard">
   
   </update>
   
   <update id="deleteBoard">
   
   </update>
   
   
   
</mapper>










